<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>cz.o2.proxima.example</groupId>
    <artifactId>example-parent</artifactId>
    <version>0.6-SNAPSHOT</version>
  </parent>

  <artifactId>example-ingest-server</artifactId>
  <packaging>jar</packaging>

  <name>${project.groupId}:${project.artifactId}</name>

  <build>
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <finalName>proxima-example-ingest-server</finalName>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven.shade.version}</version>
        <configuration>
          <transformers>
            <transformer
                implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
          </transformers>
          <relocations>
            <relocation>
              <pattern>com.google.common.</pattern>
              <shadedPattern>${coreShade}.com.google.common.</shadedPattern>
            </relocation>
          </relocations>
          <filters>
            <!-- some artifact are signed -> signature files must be excluded -->
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>with-docker</id>
      <build>
        <plugins>
          <plugin>
            <groupId>io.fabric8</groupId>
            <artifactId>docker-maven-plugin</artifactId>
            <version>${maven.docker.version}</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>build</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <images>
                <image>
                  <name>proxima/example-ingest-server:${project.version}</name>
                  <alias>proxima-example-ingest-server</alias>
                  <build>
                    <cleanup>true</cleanup>
                    <from>java:8</from>
                    <tags>
                      <tag>${project.version}</tag>
                      <tag>latest</tag>
                    </tags>
                    <entryPoint>
                      <exec>
                        <arg>/maven/entry-point.sh</arg>
                        <arg>cz.o2.proxima.server.IngestServer</arg>
                      </exec>
                    </entryPoint>
                    <ports>
                      <port>4001</port>
                    </ports>
                    <assembly>
                  <mode>dir</mode>
                  <inline>
                    <id>proxima-server</id>
                    <files>
                      <file>
                        <source>${project.build.directory}/proxima-example-ingest-server.jar
                        </source>
                        <outputDirectory>./</outputDirectory>
                        <destName>proxima-example-ingest-server.jar</destName>
                      </file>
                      <file>
                        <source>${project.basedir}/bin/entry-point.sh</source>
                        <outputDirectory>./</outputDirectory>
                        <destName>entry-point.sh</destName>
                      </file>
                    </files>
                  </inline>
                </assembly>
              </build>
            </image>
            <!-- @TODO: try to find a way how to reuse image from ingest-server -->
            <image>
              <name>proxima/example-replication-controller:${project.version}</name>
              <alias>proxima-example-replication-controller</alias>
              <build>
                <cleanup>true</cleanup>
                <from>java:8</from>
                <tags>
                  <tag>${project.version}</tag>
                  <tag>latest</tag>
                </tags>
                <entryPoint>
                  <exec>
                    <arg>/maven/entry-point.sh</arg>
                    <arg>cz.o2.proxima.server.ReplicationController</arg>
                  </exec>
                </entryPoint>
                <assembly>
                  <mode>dir</mode>
                  <inline>
                    <id>proxima-server</id>
                    <files>
                      <file>
                        <source>${project.build.directory}/proxima-example-ingest-server.jar
                        </source>
                        <outputDirectory>./</outputDirectory>
                        <destName>proxima-example-ingest-server.jar</destName>
                      </file>
                      <file>
                        <source>${project.basedir}/bin/entry-point.sh</source>
                        <outputDirectory>./</outputDirectory>
                        <destName>entry-point.sh</destName>
                      </file>
                    </files>
                  </inline>
                </assembly>
              </build>
            </image>
              </images>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <dependencies>

    <dependency>
      <groupId>cz.o2.proxima</groupId>
      <artifactId>proxima-ingest-server-grpc</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>cz.o2.proxima.example</groupId>
      <artifactId>example-model</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>cz.o2.proxima.example</groupId>
      <artifactId>example-proto</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>

    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>${slf4j.version}</version>
      <scope>compile</scope>
    </dependency>

  </dependencies>

</project>

