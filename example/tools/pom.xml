<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>cz.o2.proxima.example</groupId>
    <artifactId>example-parent</artifactId>
    <version>0.11.0</version>
  </parent>

  <artifactId>example-tools</artifactId>
  <packaging>jar</packaging>

  <name>${project.groupId}:${project.artifactId}</name>

  <properties>
    <tool.finaljar.name>proxima-example-tools</tool.finaljar.name>
  </properties>

  <build>
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>${maven.jar.version}</version>
        <configuration>
          <finalName>${tool.finaljar.name}</finalName>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven.shade.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer
                  implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                  <resource>META-INF/services/org.apache.hadoop.fs.FileSystem</resource>
                </transformer>
                <transformer
                  implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
              </transformers>
              <filters>
                <!-- some artifact are signed -> signature files must be excluded -->
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.gmavenplus</groupId>
        <artifactId>gmavenplus-plugin</artifactId>
        <version>${gmaven.version}</version>
        <executions>
          <execution>
            <goals>
              <goal>addSources</goal>
              <goal>addTestSources</goal>
              <goal>compile</goal>
              <goal>compileTests</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <sources>
            <source>
              <directory>${project.basedir}/src/main/groovy</directory>
              <includes>
                <include>**/*.groovy</include>
              </includes>
            </source>
            <source>
              <directory>${project.basedir}/target/generated-sources/groovy</directory>
              <includes>
                <include>**/*.groovy</include>
              </includes>
            </source>
          </sources>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>cz.o2.proxima.tools.groovy.Compiler</mainClass>
          <commandlineArgs>-o ${project.basedir}/target/generated-sources/groovy/cz/o2/proxima/example/Environment.groovy
            ${project.parent.basedir}/model/src/main/resources/reference.conf
          </commandlineArgs>
        </configuration>
      </plugin>

    </plugins>
  </build>
  <profiles>
    <profile>
      <id>with-docker</id>
      <build>
        <plugins>
          <plugin>
            <groupId>io.fabric8</groupId>
            <artifactId>docker-maven-plugin</artifactId>
            <version>${maven.docker.version}</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>build</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <images>
                <image>
                  <name>proxima/example-tools:${project.version}</name>
                  <alias>proxima-example-tools</alias>
                  <build>
                    <cleanup>true</cleanup>
                    <from>java:8</from>
                    <tags>
                      <tag>${project.version}</tag>
                      <tag>latest</tag>
                    </tags>
                    <entryPoint>
                      <exec>
                        <arg>/maven/entry-point.sh</arg>
                      </exec>
                    </entryPoint>
                    <assembly>
                      <mode>dir</mode>
                      <inline>
                        <id>proxima-console</id>
                        <files>
                          <file>
                            <source>${project.build.directory}/${tool.finaljar.name}.jar
                            </source>
                            <outputDirectory>./</outputDirectory>
                            <destName>${tool.finaljar.name}.jar</destName>
                          </file>
                          <file>
                            <source>${project.basedir}/bin/entry-point.sh</source>
                            <outputDirectory>./</outputDirectory>
                            <destName>entry-point.sh</destName>
                          </file>
                          <file>
                            <source>${project.basedir}/bin/run.sh</source>
                            <outputDirectory>./</outputDirectory>
                            <destName>run.sh</destName>
                          </file>
                        </files>
                      </inline>
                    </assembly>
                  </build>
                </image>
              </images>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>

